{% extends 'layout.twig' %}

{% block contentHeader %}
	Cadastro de cliente
{% endblock %}

{% block buttonHeader %}

{% endblock %}
	
{%block conteudo %}


	<form role="form" action="/cliente" method="post">
		<div class="row">
			<div class="col-lg-12">
				<label>Nome</label>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<input class="form-control" name="nome" placeholder="Informe o nome do cliente" value = "{{ cliente.nome }}">
			</div>	
		</div>

		<div class="row">
			<div class="col-lg-12">
				<label>E-mail</label>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<input class="form-control" name="email" placeholder="Informe o e-mail do cliente" value="{{ cliente.email }}">
			</div>	
		</div>

		<input type="hidden" id="_method" value="POST">
		<input type="hidden" name="id" value=" {{ cliente.id }}">

	</form>

{% endblock %}