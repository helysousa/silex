{% extends 'layout.twig' %}

{% block contentHeader %}
	Lista de Produtos 
{% endblock %}

{% block buttonHeader %}

	<button type="button" class="btn btn-success btn-circle">
		<i class="fa fa-plus"> </i>
	</button>

{% endblock %}

{% block conteudo %}

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Codigo</th>
				<th>Descrição</th>
				<th>Unidade</th>
				<th>Preço</th>
			</tr>
		</thead>
		<tbody>
			{% for produto in produtos %}
				<tr>
					<td><a href="{{ path('produto.show', { 'codigo': produto.codigo} ) }}">{{ produto.codigo }}</a></td>
					<td>{{ produto.descricao }}</td>
					<td>{{ produto.unidade }}</td>
					<td>{{ produto.preco }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock %}

